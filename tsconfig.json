{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop":true,
    "jsx": "react",
    "allowJs": true
  },
  "include": [
    "src/main.ts",
    "src/shared/config/**/*.ts",
    "src/shared/filters/**/*.ts",
    "src/shared/errors/**/*.ts",
    "src/migration/**/*.ts",
    "src/modules/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
